<header>
  <div class="header">
    <div class="title">ビジュアルタスク</div>
    <ul class="header-btn">
      <% if user_signed_in? %>
        <li><%= link_to current_user.name, "#", class: "user-nickname btn" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout btn" %></li>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login btn" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up btn" %></li>
      <% end %>
    </ul>
  </div>
</header>
<div class="wrapper">
  <div class="side-bar-top">
    <ul class="confirm">
      <li><%= link_to '空いてる時間を入力する', "#", class: "top-link" %></li>
      <li><%= link_to '勧誘を確認する', "#", class: "top-link" %></li>
    </ul>
  </div>
  <div class="side-bar-middle">
    <div class="room">room1</div>
    <div class="room">room2</div>
  </div>
  <div class="side-bar-bottom">
    <div class="btn">ルーム作成</div>
  </div>
  <main class="main">
    <div>勧誘一覧</div>
    <div>期限切れの勧誘</div>
  </main>
</div>